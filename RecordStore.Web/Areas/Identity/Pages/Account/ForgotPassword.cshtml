@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
}
<style>
    .interactive-btn {
        transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
    }

    .interactive-btn:hover {
        transform: translateY(-3px);
        box-shadow: 0 0.4rem 0.8rem rgba(0,0,0,.15);
    }
</style>
<div class="container mt-4 mb-5">
    <div class="row d-flex justify-content-center align-items-center">
        <div class="col-lg-12 col-xl-11">
            <div class="card shadow-sm" style="border-radius: 1rem;">
                <div class="card-body p-md-5">
                    <div class="row justify-content-center">

                        <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">
                            <h2 class="text-center fw-bold mb-4">@ViewData["Title"]</h2>
                            <p class="text-center text-muted mb-4">Enter your email and we will send you a link to reset your password.</p>

                            <form method="post">
                                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                                <div class="mb-4">
                                    <label asp-for="Input.Email" class="form-label">Email</label>
                                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                                </div>
                                <div class="d-grid">
                                    <button type="submit" class="btn btn-primary btn-lg interactive-btn">Reset Password</button>
                                </div>
                                <p class="text-center mt-4 interactive-btn">
                                    <a asp-page="./Login">Back to Login</a>
                                </p>
                            </form>
                        </div>

                        <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">
                            <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-registration/draw1.webp"
                                 class="img-fluid" alt="Sample image">
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
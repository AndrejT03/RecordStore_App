@model RecordStore.Domain.DomainModels.RecordLabel

@{
    ViewData["Title"] = "Create New Record Label";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .interactive-btn {
        transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
    }

    .interactive-btn:hover {
        transform: translateY(-3px);
        box-shadow: 0 0.4rem 0.8rem rgba(0,0,0,.15);
    }

    .form-table {
        width: 100%;
        max-width: 800px;
        border-collapse: separate;
        border-spacing: 0 12px;
    }

    .form-table td {
        vertical-align: middle;
    }

    .form-table .label-cell {
        text-align: right;
        padding-right: 15px;
        width: 150px;
        font-weight: bold;
        color: #555;
    }

    .form-table .input-cell input,
    .form-table .input-cell select {
        width: 100%;
        max-width: 350px;
        border: 1px solid #ccc;
        padding: 6px;
        font-size: 14px;
        border-radius: 3px;
    }

    .text-danger {
        font-size: 0.9em;
        margin-left: 2px;
        white-space: nowrap;
    }
</style>

<h1 style="margin-top: 20px">Add new Record Label</h1>
<hr />

<div class="row">
    <div class="col-md-8">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <table class="form-table">
                <tbody>
                    <tr>
                        <td class="label-cell"><label asp-for="Name"></label></td>
                        <td class="input-cell">
                            <input asp-for="Name" />
                        </td>
                        <td class="validation-cell">
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </td>
                    </tr>
                    <tr>
                        <td class="label-cell"><label asp-for="City"></label></td>
                        <td class="input-cell">
                            <input asp-for="City" />
                        </td>
                        <td class="validation-cell">
                            <span asp-validation-for="City" class="text-danger"></span>
                        </td>
                    </tr>
                    <tr>
                        <td class="label-cell"><label asp-for="CountryId"></label></td>
                        <td class="input-cell">
                            <select asp-for="CountryId" asp-items="ViewBag.CountryId">
                                <option value="">Select a Country</option>
                            </select>
                        </td>
                        <td class="validation-cell">
                            <span asp-validation-for="CountryId" class="text-danger"></span>
                        </td>
                    </tr>
                    <tr>
                        <td class="label-cell"></td>
                        <td class="input-cell" colspan="2">
                            <input type="submit" value="Create" class="btn btn-primary interactive-btn" />
                        </td>
                    </tr>
                </tbody>
            </table>
        </form>
    </div>
</div>

<div style="margin-top: 20px;">
    <a asp-action="Index" class="btn btn-info interactive-btn">&lt; Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
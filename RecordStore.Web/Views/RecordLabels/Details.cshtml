@model RecordStore.Domain.DomainModels.RecordLabel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .interactive-btn {
        transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
    }

    .interactive-btn:hover {
        transform: translateY(-3px);
        box-shadow: 0 0.4rem 0.8rem rgba(0,0,0,.15);
    }
</style>

<div class="container my-5">
    <h1>Details for: @Model.Name</h1>
    <hr />
    <div>
        <dl class="row">
            <dt class="col-sm-2">Name</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Name)</dd>
            <dt class="col-sm-2">City</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.City)</dd>
            <dt class="col-sm-2">Country</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Country.Name)</dd>
        </dl>
    </div>
    <div>
        <a asp-action="Index" class="btn btn-info interactive-btn">&lt; Back to List</a>
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning ms-1 interactive-btn">Edit</a>
    </div>
</div>
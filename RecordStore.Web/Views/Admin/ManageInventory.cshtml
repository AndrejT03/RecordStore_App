@model IEnumerable<RecordStore.Domain.DomainModels.Record>

@{
    ViewData["Title"] = "Inventory Management";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .interactive-btn {
        transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
    }

    .interactive-btn:hover {
        transform: translateY(-3px);
        box-shadow: 0 0.4rem 0.8rem rgba(0,0,0,.15);
    }
</style>

<div class="container my-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="mb-0">Manage Inventory</h1>
    </div>

    @if (TempData["SuccessInventoryMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessInventoryMessage"]
            <button type="button" class="btn-close interactive-btn" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["ErrorInventoryMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorInventoryMessage"]
            <button type="button" class="btn-close interactive-btn" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card shadow-sm">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover table-striped align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th class="ps-4" style="width: 45%;">Record Title</th>
                            <th>Artist</th>
                            <th class="text-center">Current Stock</th>
                            <th class="text-center" style="width: 20%;">Update Stock</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (!Model.Any())
                        {
                            <tr>
                                <td colspan="4" class="text-center p-5">
                                    <p class="lead mb-0">No records found in the inventory.</p>
                                </td>
                            </tr>
                        }
                        else
                        {
                            @foreach (var item in Model.OrderBy(r => r.Artist.Name).ThenBy(r => r.Title))
                            {
                                <tr>
                                    <td class="ps-4">
                                        <a asp-controller="Records" asp-action="Details" asp-route-id="@item.Id" target="_blank" class="text-decoration-none fw-bold">@item.Title</a>
                                    </td>
                                    <td>@item.Artist?.Name</td>
                                    <td class="text-center">
                                        @if (item.StockQuantity > 10)
                                        {
                                            <span class="badge rounded-pill bg-success">@item.StockQuantity In Stock</span>
                                        }
                                        else if (item.StockQuantity > 0)
                                        {
                                            <span class="badge rounded-pill bg-warning text-dark">Low Stock (@item.StockQuantity)</span>
                                        }
                                        else
                                        {
                                            <span class="badge rounded-pill bg-danger">Out of Stock</span>
                                        }
                                    </td>
                                    <td>
                                        <form asp-action="UpdateStock" asp-controller="Admin" method="post" class="d-flex justify-content-center px-2">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="RecordId" value="@item.Id" />
                                            <div class="input-group input-group-sm">
                                                <input type="number" name="NewQuantity" class="form-control" value="@item.StockQuantity" min="0" required aria-label="New quantity" />
                                                <button type="submit" class="btn btn-primary interactive-btn">Update</button>
                                            </div>
                                        </form>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="mt-4">
        <a asp-action="Dashboard" class="btn btn-info interactive-btn">&lt; Back to Dashboard</a>
    </div>
</div>
@using RecordStore.Domain.DomainModels
@model List<IGrouping<Record, Review>>

@{
    ViewData["Title"] = "Manage All Reviews";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .interactive-btn {
        transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
    }

    .interactive-btn:hover {
        transform: translateY(-3px);
        box-shadow: 0 0.4rem 0.8rem rgba(0,0,0,.15);
    }
</style>

<div class="container my-4">
    <h1 class="mb-4">Manage All Reviews</h1>

    @if (TempData["SuccessReviewMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessReviewMessage"]
            <button type="button" class="btn-close interactive-btn" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["ErrorReviewMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorReviewMessage"]
            <button type="button" class="btn-close interactive-btn" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (!Model.Any())
    {
        <p>There are no reviews in the system yet.</p>

        <div class="mt-5">
            <a asp-action="Dashboard" class="btn btn-info interactive-btn">&lt; Back to Dashboard</a>
        </div>
    }
    else
    {
        <div class="accordion" id="reviewsAccordion">
            @foreach (var recordGroup in Model)
            {
                var record = recordGroup.Key;
                var accordionId = $"collapse-{record.Id.ToString()}";
                var headerId = $"header-{record.Id.ToString()}";

                <div class="accordion-item">
                    <h2 class="accordion-header" id="@headerId">
                        <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#@accordionId" aria-expanded="true" aria-controls="@accordionId">
                            <strong>@record.Title</strong> &nbsp; <span class="badge bg-secondary ms-2">@recordGroup.Count() Reviews</span>
                        </button>
                    </h2>
                    <div id="@accordionId" class="accordion-collapse collapse show" aria-labelledby="@headerId" data-bs-parent="#reviewsAccordion">
                        <div class="accordion-body">
                            <ul class="list-group">
                                @foreach (var review in recordGroup.OrderByDescending(r => r.DateCreated))
                                {
                                    <li class="list-group-item d-flex justify-content-between align-items-center">
                                        <div>
                                            <p class="mb-1">
                                                <strong>@review.User?.UserName</strong> rated it
                                                <span class="text-warning">
                                                    @for (int i = 0; i < review.Rating; i++)
                                                    {
                                                        <text>★</text>
                                                    }
                                                </span>
                                                (@review.Rating/5)
                                            </p>
                                            @if (!string.IsNullOrEmpty(review.Comment))
                                            {
                                                <p class="mb-1 fst-italic">"@review.Comment"</p>
                                            }
                                            <small class="text-muted">
                                                @if (review.DateModified.HasValue)
                                                {
                                                    @($"edited on {review.DateModified.Value:dd MMMM yyyy}")
                                                }
                                                else
                                                {

                                                    @($"on {review.DateCreated:dd MMMM yyyy}")
                                                }
                                            </small>
                                        </div>

                                        <button type="button" class="btn btn-sm btn-outline-danger interactive-btn"
                                                data-bs-toggle="modal"
                                                data-bs-target="#deleteReviewModal"
                                                data-review-id="@review.Id"
                                                title="Delete this review">
                                            <i class="fas fa-trash-alt"></i>
                                        </button>
                                    </li>
                                }
                            </ul>
                        </div>
                    </div>
                </div>
            }
        </div>
        <div class="mt-4">
            <a asp-action="Dashboard" class="btn btn-info interactive-btn">&lt; Back to Dashboard</a>
        </div>
    }
</div>

<div class="modal fade" id="deleteReviewModal" tabindex="-1" aria-labelledby="modalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalLabel">Confirm Deletion</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete this review?</p>
                <p class="text-danger">This action cannot be undone.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary interactive-btn" data-bs-dismiss="modal">Cancel</button>

                <form asp-action="DeleteReview" asp-controller="Admin" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="id" id="reviewIdToDelete" />
                    <button type="submit" class="btn btn-danger interactive-btn">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script type="text/javascript">
        document.addEventListener('DOMContentLoaded', function () {
            var deleteReviewModal = document.getElementById('deleteReviewModal');

            deleteReviewModal.addEventListener('show.bs.modal', function (event) {
                var button = event.relatedTarget;
                var reviewId = button.getAttribute('data-review-id');
                var reviewIdInput = deleteReviewModal.querySelector('#reviewIdToDelete');

                reviewIdInput.value = reviewId;
            });
        });
    </script>
}